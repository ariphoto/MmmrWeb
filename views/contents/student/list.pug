extends ../../layout_template/layout

block content
    .container.text-center(onload = "javascript:init();")
        include ../../layout_template/list/list_header

        .row
            .col-md-8.col-md-offset-2
                h1.text-center #{title}

        .row
            // 絞り込みのボックス
            .col-xs-10.col-xs-offset-1.col-md-6.col-md-offset-3.refineBox

                // 左部分
                .col-md-3.refine-other
                    p 絞り込み

                // 中央部分
                .col-md-6.refine-other

                    // 名前ボックス
                    .row
                        .col-md-12
                            - if(inputData)
                                input#name_box(style="width: 100%" placeholder="名前" value = inputData[0])
                                input#gender_h(type="hidden" value = inputData[1])
                                input#party_h(type="hidden" value = inputData[2])
                                input#age_h(type="hidden" value = inputData[3])
                            - else
                                input#name_box(style="width: 100%" placeholder="名前")

                    // プルダウン群
                    .row(style="margin:0%")
                        p
                            .col-md-3.pull-left(style="padding:0%"): select#gender_box
                                option(value='') 性別
                                option(value='man') 男
                                option(value='woman') 女
                                option(value='other') その他

                            .col-md-6: select#party_box
                                option(value='') 組
                                - for(var i = 0;i < parties.length;i++)
                                    option(value=parties[i].name) #{parties[i].name}
                            .col-md-3(style="padding:0%"): select.text-right#age_box
                                option(value='') 年齢
                                - for(var i = 0;i < 6;i++)
                                    option(value=i) #{i}

                //　右部分
                .col-md-3.refine-student-btn
                    button(onclick="filter()").btn.btn-info.pull-left 実行

        .row
            .col-md-10.col-md-offset-1
                .pull-left: button.btn.btn-success.btn-original 新規追加
                .pull-right 選択した項目を
                    button(onclick="delete_multi()").btn.btn-danger.btn-original 削除

        .row
            .col-md-10.col-md-offset-1
                // リスト表示用テーブル
                table#list_table.table.table-bordered.table-striped
                    thead
                        tr
                            th
                            th.col-md-2 写真
                            th.col-md-3 名前
                            th.col-md-1 性別
                            th.col-md-1 組
                            th.col-md-1 年齢
                            th.col-md-6 備考
                            th 編集
                            th 削除
                    tbody
                    - var cols = 5 // テキスト表示する項目数
                    include ../../layout_template/list/show_data