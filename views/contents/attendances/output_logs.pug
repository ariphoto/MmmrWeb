extends ../../layout_template/layout
block script
    script(src="/javascripts/list/list_base.js")
    script(src="/javascripts/list/list_onRows.js")
block content
    .container.text-center
        include ../../layout_template/list/list_header

        .row
            .col-md-8.col-md-offset-2
                h1.text-center #{title}
        .row
            //絞り込みボックス
            .col-xs-10.col-xs-offset-1.col-md-6.col-md-offset-3.refineBox

                //左部分
                .col-md-3.refine-other
                    p 絞り込み

                //中央部分
                .col-md-6.refine-other

                    //名前ボックス
                    .row
                        .col-md-12
                            -if(inputData)
                                input#name_box(style="width: 100%" placeholder="名前" value = inputData[0])
                                input#gender_h(type="hidden" value = inputData[1])
                                input#party_h(type="hidden" value = inputData[2])
                                input#age_h(type="hidden" value = inputData[3])
                            - else
                                input#name_box(style="width: 100%" placeholder="名前")

                    //プルダウン群
                    .row
                        .col-md-5.text-center: select#party_box
                            option(value='') 組
                            - for(let i = 0;i < parties.length;i++)
                                option(value=parties[i].name) #{parties[i].name}

                        .col-md-3: select#month_box
                            option(value='') 月選択
                            - for (let i = 1;i<13 ;i++)
                                option(value=i) #{i}月
                        .col-md-3: select#week_box
                            option(value='') 週選択
                            - for (let i = 1;i<5 ;i++)
                                option(value=i) 第#{i}週



                //右部分
                .col-md-3.refine-student-btn
                    button(onclick="output_logs").btn.btn-info.pull-left 実行
