form#school_form(method='post' action='/contents/school/edit')
    table
        tr
            //要素内にrequiredを宣言することでnullを許さないマンと化す
            td 保育園名
            td
                // td: input(type='text', name='name', size=20, required)
                - if(data)
                    input#id_h(style='display: none' name='id' value = data.schoolId)
                    input#schoolNameBox(type='text', name='name', size=20 value=data.name)
                - else
                    input#schoolNameBox(type='text', name='name', size=20)
        tr
            td 保育園ID
            td
                //minlengthで文字数の下限制約 満たしてないとpostするときに警告が吐かれる
                //maxlengthで文字数の上限制約 規定以上は入力できなくなる。
                - if(data)
                    input#schoolIdBox(type='text', name='schoolId', size=20 value=data.schoolId, required, minlength=4, maxlength=20, pattern='^[0-9A-Za-z]+$')
                - else
                    input#schoolIdBox(type='text', name='schoolId', size=20, required, minlength=4, maxlength=20, pattern='^[0-9A-Za-z]+$')
        tr
            td メールアドレス
            td
                - if(data)
                    input#schoolAddressBox(type='email', name='address', size=20 value=data.mailAddress required)
                - else
                    input#schoolAddressBox(type='email', name='address', size=20, required)
        tr
            td 新規パスワード
            td: input#schoolPassBox(type='password', name='password', size=20, required, pattern='^[0-9A-Za-z]+$', minlength=8, maxlength=20)
        tr
            td  新規パスワード（確認）
            td
                input#schoolPassConfBox(type='password', name='passwordRe', size=20)
                input#oldPassBox(style='display: none' , name='oldPass', size=20, required, pattern='^[0-9A-Za-z]+$', minlength=8, maxlength=20)
