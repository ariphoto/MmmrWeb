form#school_form(method='post' action='/contents/school/edit')
    table
        tr
            td 保育園名
            td
                - if(data)
                    input#id_h(style='display: none' name='id' value = data.schoolId)
                    input#schoolNameBox(type='text', name='name', size=20 value=data.name)
                - else
                    input#schoolNameBox(type='text', name='name', size=20)
        tr
            td 保育園ID
            td
                - if(data)
                    input#schoolIdBox(type='text', name='newId', size=20 value=data.schoolId)
                - else
                    input#schoolIdBox(type='text', name='newId', size=20)
        tr
            td メールアドレス
            td
                - if(data)
                    input#schoolAddressBox(type='text', name='mailAddress', size=20 value=data.mailAddress)
                - else
                    input#schoolAddressBox(type='text', name='mailAddress', size=20)
        tr
            td 新規パスワード
            td: input#schoolPassBox(type='password', name='pass', size=20)
        tr
            td  新規パスワード（確認）
            td
                input#schoolPassConfBox(type='password', name='passConf', size=20)
                input#oldPassBox(style='display: none' , name='oldPass', size=20)
