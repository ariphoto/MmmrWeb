table
    tr
        //要素内にrequireを宣言したら入力必須にできる
        td 保育園名
        td
           - if(data)
               input#id_h(style='display: none' name='id' value = data.schoolId)
               input#schoolNameBox(type='text', name='name', size=20 value=data.name)
           - else
               input(type='text', name='name', size=20 , required)
    tr
        td 保育園ID
        td
           //minlengthで文字数の下限制約 満たしてないとpostするときに警告が吐かれる
           //maxlengthで文字数の上限制約 規定以上は入力できなくなる。
           - if(data)
               input#schoolIdBox(type='text', name='schoolId', size=20 value=data.schoolId, required, minlength=4, maxlength=20, pattern='^[0-9A-Za-z]+$')
           - else
               input(type='text', name='schoolId', size=20, required, minlength=4, maxlength=20, pattern='^[0-9A-Za-z]+$')
    tr
        td メールアドレス
        td
           - if(data)
               input#schoolAddressBox(type='email', name='address', size=20 value=data.mailAddress required)
           - else
               input(type='email', name='address', size=20, required)
    tr
        td 新規パスワード
        td: input#schoolPassBox(type='password', name='password', size=20, pattern='^[0-9A-Za-z]+$', minlength=8, maxlength=20)
    tr
        td  新規パスワード（確認）
        td
           input#schoolPassConfBox(type='password', name='passwordRe', size=20, pattern='^[0-9A-Za-z]+$', minlength=8, maxlength=20)


    // モーダルの配置
    .modal#modal-pass
        .modal-dialog
            // モーダルのコンテンツ
            .modal-content
                // モーダルのヘッダ
                .modal-header
                // モーダルのボディ
                .modal-body
                    .row
                        .col-md-6.col-md-offset-3
                            p 現在のパスワードを入力してください。
                            p.text-center: input#oldPassBox(type='password' name='oldPass')
                // モーダルのフッタ
                .modal-footer
                    button.btn.btn-default.long120(type="button" data-dismiss="modal") キャンセル
                    button.btn.btn-primary(type="button" onclick='oldPassSubmit();') OK