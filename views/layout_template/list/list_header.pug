// トップメニュー
header.main-header
    // ロゴ
    a.logo(href="/menu" style="background-color:white"): img(src='/image/logos/transparentNofaceCropped.png' width='35%' alt='こどもスタンプ')
    // トップメニュー
    nav.navbar.navbar-static-top(role="navigation")
        // メニュー項目
        // 小さくなった時に消す
        .collapse.navbar-collapse#navbar-collapse
            ul.nav.navbar-nav: li.text-left: a #{schoolName}
            // 右に寄せるメニュ :navbar-rightとかもあるが、マージが無い
            .navbar-custom-menu
        ul.nav.navbar-nav
                    li: a(href="/contents/school/edit"): i.fa.fa-gears 設定
                ul.nav.navbar-nav
                    li: a(href="/logout"): i.fa.fa-sign-out ログアウト
// end header
// サイドバー
aside.main-sidebar
    section.sidebar
        ul.sidebar-menu
            // メニュー項目
            li: a(href="/menu"): i.fa.fa-circle-o トップページ
            li: a(href="/contents/student/list"): i.fa.fa-circle-o 園児リスト
            li: a(href="/contents/teachers/list"): i.fa.fa-circle-o 保育士リスト
            li: a(href="/contents/party/list"): i.fa.fa-circle-o 組リスト
